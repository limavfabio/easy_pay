<div class='flex bg-white p-2 rounded-sm'>
  <%= link_to image_tag(
    "icons/archive_box.svg",
    class: "h-16",
    alt: "Archive Box Icon"
  ),
  payment %>
  <div class='flex flex-col justify-between ml-2'>
    <div class="flex flex-col">
      <%= link_to payment.name, payment %>
      <p class='font-bold'>$<%= payment.amount %></p>
    </div>
    <p class='text-sm'><%= payment.created_at %></p>
  </div>
</div>
