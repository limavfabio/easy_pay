<% content_for :header_title, "REGISTER" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% content_for :header_icon do %>
    <%= f.submit "Next" %>
  <% end %>

  <div class="field pt-3">
    <%= f.text_field :name,
                 autofocus: true,
                 autocomplete: "name",
                 placeholder: "Full name",
                 class:
                   "w-full focus:ring-0 focus:outli border-l-0 border-r-0 border-gray-300 focus:outline-none placeholder-gray-400" %>
  </div>

  <div class="field pt-2">
    <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: "Email",
                  class:
                    "w-full focus:ring-0 focus:outli border-l-0 border-r-0 border-gray-300 focus:outline-none placeholder-gray-400" %>
  </div>

  <div class="field pt-2">
    <%= f.password_field :password,
                     autocomplete: "current-password",
                     placeholder: "Password",
                     class:
                       "w-full focus:ring-0 focus:outli border-l-0 border-r-0 border-gray-300 focus:outline-none placeholder-gray-400" %>
  </div>

  <div class="field pt-2">
    <%= f.password_field :password_confirmation,
                     autocomplete: "new-password",
                     placeholder: "Password confirmation",
                     class:
                       "w-full focus:ring-0 focus:outli border-l-0 border-r-0 border-gray-300 focus:outline-none placeholder-gray-400" %>
  </div>

  <div class="actions text-center pt-5">
    <%= f.submit "Sign up", class: "text-gray-500 hover:cursor-pointer" %>
  </div>
<% end %>
