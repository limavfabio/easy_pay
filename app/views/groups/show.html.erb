<h2 class='text-center text-lg font-bold my-2'>
  <%= @group.name %>
</h2>

<div class='bg-white p-2 m-3 text-center rounded-sm'>
  <p class='font-bold'>Total Amount: $<%= @total_amount %></p>
</div>

<div id="payments" class='flex flex-col gap-3 m-3'>
  <% @payments.each do |payment| %>
    <%= render "payments/payment_card", payment: payment %>
  <% end %>
</div>

<div class='bg-green-600 p-3 fixed w-full bottom-0'>
  <div class='border p-3 border-white text-center sticky'><%= link_to "New payment for this group",
    new_payment_path(group_id: @group.id),
    class: "text-white" %>
  </div>
</div>
